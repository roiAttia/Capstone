<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="roiattia.com.capstone">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:launchMode="singleTop"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.calendar.CalendarActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.newjob.JobActivity" />
        <activity android:name=".ui.category.CategoryDetailsActivity" />
        <activity
            android:name=".ui.finances.FinancesActivity"
            android:parentActivityName=".ui.calendar.CalendarActivity" />
        <activity android:name=".ui.newexpense.ExpenseActivity" />

        <receiver android:name=".FinancesWidgetProvider">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/finances_widget_provider_info" />
        </receiver>
        <service android:name=".FinancesReportService" />
    </application>

</manifest>